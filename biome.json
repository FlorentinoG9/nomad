{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      },
      "nursery": {
        "noShadow": "off"
      },
      "style": {
        "noMagicNumbers": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "jsxQuoteStyle": "single"
    }
  }
}
